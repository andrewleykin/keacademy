// ОБЩИЕ СТИЛИ

.container 
	width 100%
	max-width 1240px
	margin 0 auto
	padding-right 20px
	padding-left 20px
	@media (max-width $breakpoint-sm)
		padding-right 10px
		padding-left 10px

.title
	font-size 40px
	font-weight bold
	line-height 1.35
	color #000
	@media (max-width $breakpoint-lg)
		font-size 32px
	@media (max-width $breakpoint-sm)
		font-size 24px

.subtitle
	font-size 22px
	line-height 1.55
	color $black-54
	@media (max-width $breakpoint-lg)
		font-size 18px
	@media (max-width $breakpoint-md)
		font-size 14px

.section-bg
	background-color $bg

.border-block
	border-bottom 1px solid $black-10

section:not(.hero)
	.container
		padding-top 140px
		padding-bottom 140px
	@media (max-width $breakpoint-lg)
		.container
			padding-top 70px
			padding-bottom 70px
	@media (max-width $breakpoint-md)
		.container
			padding-top 56px
			padding-bottom 56px

.inner-page
	border-top 1px solid $black-10
	padding-top 24px
	padding-bottom 224px
	@media (max-width $breakpoint-md)
		padding-bottom 140px

.content
	.title
		margin-bottom 24px
	p
		font-family Ubuntu
		font-size 16px
		line-height 1.5
		color $black-54
	p + p
		margin-top 1rem

// футер к низу

body 
	display flex
	flex-direction column


.main 
	flex 1
