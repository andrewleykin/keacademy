.accent
  background url('../img/content/accent-bg.jpg') center no-repeat
  background-size cover
  min-height 116px
  border-radius 16px
  display flex
  align-items center
  justify-content space-between
  padding 0 26px
  &--elems
    position relative
    &:after
      content ''
      display block
      width 194px
      height 154px
      background url('../img/general/accent-elems.svg') center no-repeat
      background-size cover
      position absolute
      z-index -1
      top 30px
      right -50px
  @media (max-width $breakpoint-md)
    display block
    padding 16px
    &--elems
      &:after
        display none

.accent__info
  color white
  max-width 570px
  margin-right 10px
  p
    font-size 22px
    font-weight 500
    line-height 1.64
  span
    color rgba(255, 255, 255, 0.7)
  @media (max-width $breakpoint-lg)
    p
      font-size 18px
  @media (max-width $breakpoint-md)
    margin-bottom 20px
    margin-right 0
  @media (max-width $breakpoint-sm)
    p
      font-weight normal