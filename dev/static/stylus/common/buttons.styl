.btn
  height 56px
  border-radius 10px
  background-color $tomato
  display flex
  align-items center
  justify-content center
  padding 0 30px
  font-size 18px
  font-weight 500
  line-height 1.33
  color #fff
  cursor pointer
  transition all .2s
  &:hover
    background-color darken($tomato, 10%)
  &:active
    background-color darken($tomato, 20%)
  &--icon
    .icon
      width 20px
      height 20px
      margin-right 12px
  &--light
    background-color rgba(229, 57, 53, 0.08)
    color $tomato
    .icon
      fill $tomato
    &:hover
      background-color rgba(229, 57, 53, 0.10)
    &:active
      background-color rgba(229, 57, 53, 0.15)
  &--white
    background-color white
    color $tomato
    &:hover
      background-color #eee
    &:active
      background-color #ddd
  @media (max-width $breakpoint-sm)
    padding 0 16px
    font-size 14px
    height 48px
