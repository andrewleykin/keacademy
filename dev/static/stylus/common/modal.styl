.modal
  max-width 460px
  padding 24px
  position relative
  border-radius 16px
  text-align left

.modal__close
  width 24px
  height 24px
  background-color $black-24
  border-radius 50%
  position absolute
  right 24px
  top 24px
  cursor pointer
  .icon
    width 24px
    height 24px
    fill white

.modal__title
  font-size 28px
  font-weight bold
  line-height 1.36
  color #000000
  margin-bottom 24px
  max-width 80%

.modal__icon
  margin-bottom 24px
  .icon
    fill #00e0b2
    width 48px
    height 48px
  &--error
    .icon
      fill $black-24

.modal__text
  font-size 14px
  line-height 1.43
  color $black-54

.modal__success
  display flex
  align-items flex-end
  font-size 14px
  line-height 1.86
  margin-top 20px
  &+&
    margin-top 0

.modal__success-desc
  color $black-38
  margin-right 70px
  width 88px

.modal__btn
  margin-top 36px
  width 100%