.video
  position relative

.video__wrap
  margin 0 auto
  width 100%
  max-width 70%
  cursor pointer
  &.active
    .video__video
      &:after
        opacity 0
    .video__info
      opacity 0
  @media (max-width $breakpoint-lg)
    max-width 100%

.video__video
  padding-top 56.25%
  position relative
  transition all .2s
  &:after
    content ''
    display block
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    background-color $black-24
  video
    position absolute
    top 0
    left 0
    width 100%
    height 100%

.video__info
  position absolute
  top 50%
  left 50%
  transform translate(-50%, -50%)
  text-align center
  transition all .2s

.video__icon
  margin-bottom 36px
  .icon
    width 56px
    height 56px
    fill white
  @media (max-width $breakpoint-sm)
    margin-bottom 0

.video__text
  font-size 20px
  font-weight 500
  line-height 1.6
  color rgba(255, 255, 255, 0.54)
  @media (max-width $breakpoint-md)
    white-space nowrap
  @media (max-width $breakpoint-sm)
    display none