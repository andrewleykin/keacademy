.header
  padding 19px 0
  &--white
    .header__burger
      &::before,&::after,span
        background-color #fff
    .header__logo
      .white
        display block
      .black
        display none
    .menu__item
      color rgba(255 255 255, 0.54)
      &:hover
        color white
  @media (max-width $breakpoint-sm)
    &--white
      .menu__item
        color rgba(0, 0, 0, 0.54)
        &:hover
          color black
    

.header__wrap
  display flex
  align-items center
  justify-content space-between
  @media (max-width $breakpoint-lg)
    flex-wrap wrap
  @media (max-width $breakpoint-sm)
    justify-content flex-start

.header__burger
  width = 20px
  height = 2px
  translate = 4px
  bg = #000

  cursor pointer
  display none
  flex-direction column
  background-color transparent
  &::before,&::after,span
    content ""
    display block
    width width
    height height
    background bg
  &::before
    margin-bottom translate
  &::after
    margin-top translate
    width 15px
  &.active
    z-index 101
    span
      opacity 0
    &::before 
      margin-bottom 0
      transform translateY(2px) rotate(45deg)
      background-color #000
    &::after 
      margin-top 0
      width 20px
      transform translateY(-2px)  rotate(-45deg)
      background-color #000
  @media (max-width $breakpoint-sm)
    display flex

.header__logo
  flex none
  .white
    display none
  @media (max-width $breakpoint-sm)
    max-width 140px
    margin-left 18px
    margin-right auto

.header__menu
  @media (max-width $breakpoint-lg)
    order 2
    width 100%
  @media (max-width $breakpoint-md)
    margin-top 10px
  @media (max-width $breakpoint-sm)
    margin-top 0
    position fixed
    transform translateY(-100%)
    top 0
    left 0
    right 0
    bottom 0
    background-color #fff
    transition all .2s
    z-index 100
    padding-top 70px
    .menu
      display block
    .menu__item
      display block
      width 100%
      padding 16px
      text-align left
      font-size 18px
      color #000
    &.active
      transform translateY(0px)

.header__menu-mobile
  display none
  .footer__logo
    position absolute
    bottom 24px
    left 16px
  .footer__links
    position absolute
    top 12px
    right 12px
  @media (max-width $breakpoint-sm)
    display block

.header__actions
  display flex
  & > * + *
    margin-left 8px

.header__tg
  width 42px
  height 42px
  border-radius 10px
  background-color #29b6f6
  display flex
  align-items center
  justify-content center
  @media (max-width $breakpoint-sm)
    display none

.header__payment
  min-width 122px
  height 42px
  display flex
  align-items center
  justify-content center
  border-radius 10px
  background-color $tomato
  color white
  img
    margin-right 10px
  @media (max-width $breakpoint-sm)
    margin-right 6px
    min-width 100px
    height 32px
    font-size 12px
    img
      max-width 20px